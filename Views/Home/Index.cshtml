
<div class="container">


    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken();

        <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Correo</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="email@example.com">
            </div>
        </div>

        <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Contraseña</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password">
            </div>
        </div>

        <div class="mb-3 row">
            <button type="submit" class="btn btn-primary">Ingresar</button>
            @Html.ActionLink("Resgistrarse", "Registrarse", "Home", null, new { @class = "btn btn-link" })
        </div>

        <div>
            @{
                var test = TempData["Notificar"];
                if (test != null)
                {
                    @Html.Label("notificar", TempData["Notificar"].ToString(), new { @class = "alert alert-danger " })
                }
            }
        </div>
    }

</div>
